<section class="spiritum-product-page">
  <div class="spiritum-product-layout">
    <div class="spiritum-product-media">
      {% if product.featured_image %}
        <img src="{{ product.featured_image | img_url: '800x' }}" alt="{{ product.title | escape }}">
      {% endif %}
    </div>
    <div class="spiritum-product-detail">
      <h1 class="spiritum-product-title">{{ product.title }}</h1>
      <div class="spiritum-product-price-main">
        {{ product.price | money }}
      </div>
      {% if product.description != blank %}
        <div class="spiritum-product-description">
          {{ product.description }}
        </div>
      {% endif %}
      <form method="post" action="/cart/add" class="spiritum-product-form">
        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
        {% if product.has_only_default_variant == false %}
          <div class="spiritum-product-options">
            {% for option in product.options_with_values %}
              <label>{{ option.name }}</label>
              <select name="options[{{ option.name }}]">
                {% for value in option.values %}
                  <option value="{{ value }}" {% if option.selected_value == value %}selected{% endif %}>{{ value }}</option>
                {% endfor %}
              </select>
            {% endfor %}
          </div>
        {% endif %}
        <button type="submit" class="spiritum-hero-button spiritum-buy-button" {% unless product.available %}disabled{% endunless %}>
          {% if product.available %}Add to ritual{% else %}Out of stock{% endif %}
        </button>
      </form>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Main product - SPIRITUM",
  "settings": []
}
{% endschema %}
