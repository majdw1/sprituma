<section class="spiritum-hero">
  <div class="spiritum-hero-grid"></div>
  <div class="spiritum-hero-orbit orbit-1"></div>
  <div class="spiritum-hero-orbit orbit-2"></div>
  <div class="spiritum-hero-inner">
    <h1 class="spiritum-hero-title">{{ section.settings.heading }}</h1>
    <p class="spiritum-hero-subtitle">{{ section.settings.subheading }}</p>
    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="spiritum-hero-button">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero - SPIRITUM",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "SPIRITUM"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Dark spiritual techwear for the awakened."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Enter the realm"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    }
  ]
}
{% endschema %}
